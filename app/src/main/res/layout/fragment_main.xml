<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D9D9D9"
    tools:context=".ui.main.MainFragment">

    <ImageView
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="76dp"
        android:src="@drawable/img_1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/history"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_margin="16dp"
        android:src="@drawable/img_9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/settings"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_margin="16dp"
        android:src="@drawable/img_8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/top"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="76dp"
        android:layout_marginTop="38dp"
        android:src="@drawable/img_2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="36dp"
        app:layout_constraintTop_toTopOf="@+id/top"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/bottom_button"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity=""
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp">


<com.google.android.material.textfield.TextInputLayout
    android:layout_width="wrap_content"

    android:layout_height="wrap_content"
    android:hint="Дата производства"
    android:textColorHint="@color/black"
    >
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/date_picker"
                    android:background="@drawable/bg"
                    android:layout_width="260dp"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:gravity="center_vertical"
                    android:textColor="@color/black"
                    android:layout_weight="1"
                    android:ems="10"
                    android:imeOptions="actionGo"
                    android:singleLine="true"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    />
</com.google.android.material.textfield.TextInputLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                >
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Объем двигателя"
                    android:textColorHint="@color/black"
                    >
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/engine_capacity"
                    android:layout_width="260dp"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:background="@drawable/bg"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="12dp"
                    android:textColor="@color/black"
                    android:layout_weight="1"
                    android:ems="10"
                    android:imeOptions="actionGo"
                    android:singleLine="true"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"/>
                </com.google.android.material.textfield.TextInputLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="8dp"
                    android:text="cc"
                    android:textColor="@color/black"
                    android:textSize="22sp" />
            </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            android:gravity="center">
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="цена покупки на аукционе"
                android:textColorHint="@color/black"
                >
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/auction_price"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:background="@drawable/bg"
                android:gravity="center_vertical"
                android:paddingHorizontal="12dp"
                android:textColor="@color/black"
                android:layout_weight="1"
                android:ems="10"
                android:imeOptions="actionGo"
                android:singleLine="true"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"/>
            </com.google.android.material.textfield.TextInputLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                android:text="¥"
                android:textColor="@color/black"
                android:textSize="22sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            android:gravity="center">
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Фрахт до Владивостока"
                android:textColorHint="@color/black"
                >
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/fraht"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:background="@drawable/bg"
                android:gravity="center_vertical"
                android:paddingHorizontal="12dp"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:layout_weight="1"
                android:ems="10"
                android:imeOptions="actionGo"
                android:singleLine="true"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"/>
            </com.google.android.material.textfield.TextInputLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                android:text="¥"
                android:textColor="@color/black"
                android:textSize="22sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            android:gravity="center">
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="FOB  (Расходы по Японии)"
                android:textColorHint="@color/black"
                >
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/fob"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:background="@drawable/bg"
                android:gravity="center_vertical"
                android:textSize="12sp"
                android:paddingHorizontal="12dp"
                android:textColor="@color/black"
                android:layout_weight="1"
                android:ems="10"
                android:imeOptions="actionGo"
                android:singleLine="true"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"/>
            </com.google.android.material.textfield.TextInputLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                android:text="¥"
                android:textColor="@color/black"
                android:textSize="22sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            android:gravity="center">
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Таможенная пошлина"
                android:textColorHint="@color/black"
                >
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/customsFee"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:background="@drawable/bg"
                android:gravity="center_vertical"
                android:paddingHorizontal="12dp"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:layout_weight="1"
                android:ems="10"
                android:imeOptions="actionGo"
                android:singleLine="true"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"/>
            </com.google.android.material.textfield.TextInputLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                android:text="₽"
                android:textColor="@color/black"
                android:textSize="22sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            android:gravity="center">
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Услуги брокера и оформление"
                android:textColorHint="@color/black"
                >
            <com.google.android.material.textfield.TextInputEditText
                android:id = "@+id/brokerageServicesRegistration"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:background="@drawable/bg"
                android:gravity="center_vertical"
                android:paddingHorizontal="12dp"
                android:textColor="@color/black"
                android:layout_weight="1"
                android:ems="10"
                android:imeOptions="actionGo"
                android:textSize="12sp"
                android:singleLine="true"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"/>
            </com.google.android.material.textfield.TextInputLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                android:text="₽"
                android:textColor="@color/black"
                android:textSize="22sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            android:gravity="center">
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Таможенная ставка"
                android:textColorHint="@color/black"
                >
            <com.google.android.material.textfield.TextInputEditText
               android:id="@+id/customsСoefficient"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:background="@drawable/bg"
                android:gravity="center_vertical"
                android:paddingHorizontal="12dp"
                android:textColor="@color/black"
                android:layout_weight="1"
                android:ems="10"
                android:imeOptions="actionGo"
                android:singleLine="true"
                android:clickable="false"
                android:textSize="12sp"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"/>
            </com.google.android.material.textfield.TextInputLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                android:text=""
                android:textColor="@color/black"
                android:textSize="22sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="12dp">
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColorHint="@color/black"
                android:hint="итоговая цена в России"
                >
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/final_price"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:background="@drawable/bg"
                android:gravity="center_vertical"
                android:paddingHorizontal="12dp"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:layout_weight="1"
                android:ems="10"
                android:imeOptions="actionGo"
                android:singleLine="true"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"/>
            </com.google.android.material.textfield.TextInputLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                android:text="₽"
                android:textColor="@color/black"
                android:textSize="22sp" />
        </LinearLayout>
        </LinearLayout>
    </ScrollView>

            <ImageView
                android:id="@+id/bottom_button"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="46dp"
                android:background="#3A66A7"
                android:paddingHorizontal="46dp"
                android:paddingVertical="8dp"
                android:scaleType="fitCenter"
                android:src="@drawable/img_4"
                android:textColor="@color/white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/save"
                android:layout_marginVertical="8dp"/>



                <ImageView
                    android:id="@+id/save"
                    android:layout_width="114dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginHorizontal="12dp"
                    android:layout_margin="8dp"
                    android:background="#3A66A7"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="8dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/img_5"
                    android:textColor="@color/white"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <ImageView
                    android:id="@+id/bottom"
                    android:layout_width="114dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginHorizontal="12dp"
                    android:layout_margin="8dp"
                    android:background="#3A66A7"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="8dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/img_6"
                    android:textColor="@color/white"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <ImageView
                    android:id="@+id/clear"
                    android:layout_width="114dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginHorizontal="12dp"
                    android:layout_margin="8dp"
                    android:background="#3A66A7"
                    android:paddingHorizontal="18dp"
                    android:paddingVertical="4dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/img_7"
                    android:textColor="@color/white"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
